# bashrc_repo, the version control display for AOSC OSes PS1.
# by Arthur Wang


# Tests
. /etc/bashrc_git &>/dev/null; _hasgit=$?
. /etc.bashrc_hg &>/dev/null; _hashg=$?
. /etc/bashrc_svn &>/dev/null; _hassvn=$?

# Output
_repo_branch() {
  ret=$?
  _git_branch 2>/dev/null || _hg_branch 2>/dev/null || _svn_branch 2>/dev/null
  return $?
}
